modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Zeus Trading Bot"

[[workflows.workflow]]
name = "Zeus Trading Bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "gunicorn --bind 0.0.0.0:5000 --workers 1 --threads 2 main:app & python -c \"import asyncio; from main import main; asyncio.run(main())\""]

[[ports]]
localPort = 5000
externalPort = 80
